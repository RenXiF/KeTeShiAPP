.logout {
  padding: 5rpx 60rpx;
  color: #FFFFFF;
  margin-top: 120rpx;
  /* box-shadow: 1px 2px 6px #F55866; */
  box-shadow: 1rpx 2rpx 6rpx #DAC1E7;
  background: -webkit-linear-gradient(45deg, #0E64C7, #01A5FC);
  background: linear-gradient(45deg, #0E64C7, #01A5FC);
  border-radius: 20rpx;
  font-size: 38rpx;
  font-weight: 700;
}
.index_order {
  max-width: 100%;
  padding: 20rpx 30rpx;
}
.index_order .order_tit {
  width: 100%;
}
.index_order .order_tit .tit {
  font-size: 36rpx;
}
.index_order .order_tit .explain text {
  font-size: 20rpx;
}
.index_order .order_tit .one_ck {
  width: 100%;
  min-height: 80rpx;
  border-radius: 14rpx;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  padding: 10rpx 6rpx;
  margin: 20rpx 0;
}
.index_order .order_tit .one_ck .radio_item {
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-left: 30rpx;
  padding: 10rpx;
  color: #333333;
}
.index_order .order_tit .one_ck .radio_item .radio_icon {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  font-size: 30rpx;
  color: #ffffff;
  line-height: 52rpx;
  box-shadow: 2rpx 4rpx 12rpx #C8C7CC;
  background-color: #FFFFFF;
  text-align: center;
}
.index_order .order_tit .one_ck .radio_item .radio_icon.active {
  background: -webkit-linear-gradient(45deg, #0E64C7, #01A5FC);
  background: linear-gradient(45deg, #0E64C7, #01A5FC);
}
.index_order .order_tit .one_ck text {
  font-size: 30rpx;
}
.index_order .order_tit .one_ck image {
  width: 60rpx;
}

