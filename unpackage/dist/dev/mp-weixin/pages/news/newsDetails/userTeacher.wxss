.teacher {
  max-width: 100%;
  min-height: 750px;
  padding: 0 15px;
  background-color: #f8f8f8;
}
.tea_one {
  width: 100%;
  border-radius: 10px;
  background-color: #FFFFFF;
}
.tea_one .tit_bk,
.tea_one .tit_list,
.tea_one .tit_page {
  width: 100%;
}
.tea_one .tit_bk text,
.tea_one .tit_list text,
.tea_one .tit_page text {
  min-width: 20px;
  color: #333333;
  font-size: 11px;
  padding: 3px 3px;
}
.tea_one .tit_bk {
  background-color: #DD524D;
  border-radius: 10px 10px 0 0;
  color: #FFFFFF;
}
.tea_one .tit_bk text {
  padding-top: 5px;
  padding-bottom: 5px;
  color: #FFFFFF;
  border-right: #FFFFFF 1px solid;
}
.tea_one .tit_list {
  border-bottom: #C8C7CC 1px solid;
}
.tea_one .tit_list text {
  border-right: #C8C7CC 1px solid;
}
.tea_one .tit_list image {
  padding: 3px;
  width: 50px;
  height: 50px;
  border-radius: 5px;
}
.tea_one .tit_page {
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.tea_one .tit_page .pages_tit {
  padding: 0 5px;
  font-size: 12px;
  border-radius: 5px;
  border: #999999 1px solid;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.tea_one .tit_page .pages_number {
  padding: 5px 10px;
}
.tea_one .tit_page .pages_number text {
  border: #999999 1px solid;
  padding: 5px 15px;
  font-size: 12px;
  margin-right: 10px;
  border-radius: 5px;
}
.tea_one .tit_page .pages_number text:hover {
  background-color: #DD524D;
  color: #FFFFFF;
}
.tea_one .tit_page .pages_tit:hover {
  background-color: #DD524D;
  color: #FFFFFF;
}

