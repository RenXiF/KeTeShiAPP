.index_dele {
  width: 100%;
  min-height: 800px;
  margin: 0;
  background-color: #f8f8f8;
}
.index_dele .index_Feedback {
  max-width: 100%;
  padding: 10px;
  margin-bottom: 20px;
  border-radius: 15px;
  box-shadow: 1px 2px 6px #9a9a9a;
}
.index_dele .index_Feedback textarea {
  max-width: 80%;
  padding: 10px;
}
.index_dele .index_Feedback text {
  font-weight: 900;
  color: #FFFFFF;
}
.index_dele .index_Feedback .eliminate {
  width: 28px;
  border: none;
  position: relative;
  z-index: 999;
  top: -40rpx;
  right: -650rpx;
}
.index_dele .index_Feedback .text_a {
  border-bottom: #eee 1px solid;
}
.index_dele .index_Feedback .text_a image {
  width: 70px;
  height: 70px;
  border-radius: 5px;
}
.index_dele .index_Feedback .text_a textarea {
  font-weight: 900;
}
.index_dele .index_Feedback .text_b {
  padding: 10px 0;
}
.index_dele .index_Feedback .text_c {
  margin-top: 30px;
  padding: 10px 20px;
  color: #FFFFFF;
  box-shadow: 1px 2px 6px #F55866;
  background: -webkit-linear-gradient(bottom, #f63e64, #f46a67);
  background: linear-gradient(0deg, #f63e64, #f46a67);
  border-radius: 15px;
  font-size: 25px;
}

